{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es2015", "dom"]
  },
  "include": [
    // "/index.d.ts",
    "src/*",
    "**/*.ts"
  ],
  "exclude": ["node_modules", "./dist/"]
}
